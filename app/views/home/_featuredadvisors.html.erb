
<div class="row centered">

  <% if users %>
  <% users.each do |user| %>

  <div class="advisorpanel">

    <%= link_to image_tag(user.avatar.url(:medium), class: "img-responsive"), user %>
    <div>
      <div class="advisorpanel-inner">

        

        <br>
          <p><b>Expertise:</b> <%=user.sector%></p>
          <p><%= user.shortsummary %></p>
          
          <div class="advisorpanel-bottom centered">
            <div class="row">
                             
                                     <div id="follow">
                  <% if user.following?(current_user) %>
                  
                  <%= link_to "Unfollow", { :controller => "users", :action => "unfollow", :id => user.id}, method: :put, remote: true, :class => "btn btn-danger btn-md pull-right" %> 

                  <%else%>

                  <%= link_to "Follow", { :controller => "users", :action => "follow", :id => user.id}, method: :put, remote: true, :class => "btn btn-primary btn-sm centered" %> 

                  <%end%>
                </div>
        

            </div>
          </div>

          <div>

          </div>
        </div>
      </div>
      <br>
    </div>

    <%end%>
    <%end%>

  </div>
