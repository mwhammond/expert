
<div id="innerpage">
  <div class="container">
    <div class="col-lg-8">
     <section class="panel advisordetailpanel">
      <div class="panel advisordetailpanel-inner">
        <div class="row">
          <div class="col-lg-3">

            <%= link_to image_tag(@startup.avatar.url(:medium), class: "img-responsive"), @startup %>
          </div>
          <div class="col-lg-9">

            <div class="row">

              <div class="col-lg-9">
                <h2><%= @startup.name %></h2>

                <h3><%=@startup.sector%></h3>
                <%if @startup.casestudy%>
                <h4><b>Case study: </b><%=@startup.requests%></h4>
                <%else%>
                <h4><b>Looking for: </b><%=@startup.requests%></h4>
                <%end%>

              </div>
              <div class="col-lg-3">

              </div>

            </div>
            <h4><%=@startup.bio%></h4>              
            <div>
              <p><b>Current stage: </b>
              <% if @startup.idea == '1'%>idea - <%end%>
              <% if @startup.market == '1'%>market research - <%end%>
              <% if @startup.product == '1'%>product development - <%end%>
              <% if @startup.launch == '1'%>launch - <%end%>
              <% if @startup.revenue == '1'%>revenue - <%end%>
              <% if @startup.profitable == '1'%>profitable - <%end%>
              <% if @startup.scaling == '1'%>scaling - <%end%>
              <% if @startup.sale == '1'%>sale <%end%>
             </p>  

            </div>



          <div class="advisordetailpanel-inner">
            <div class="row">
              <div class="col-lg-12">
                <%if @startup.user_id == current_user.id%>
                <h3><%= link_to "edit profile", edit_startup_path(@startup), :class=>"pull-right" %></h3>
                <%else%>

            <div>
            <form name=myform>
<input type=button value="Message" class="btn btn-default btn-md pull-right",
onClick="alert('This feature will be enabled soon, follow for now')">
</form>
</div>


                <div id="follow">
                  
                  <% if @startup.following?(current_user) %>
              
                  
                  <%= link_to "Unfollow", { :controller => "startups", :action => "unfollow", :id => @startup.id}, method: :put, remote: true, :class => "btn btn-danger btn-md pull-right" %> 
                

                  <%else%>

                  
                  <%= link_to "Follow", { :controller => "startups", :action => "follow", :id => @startup.id}, method: :put, remote: true, :class => "btn btn-primary btn-md pull-right" %> 


                  
                  <%end%>
                </div>

                <div id="followed">

                  <%= link_to "Unfollow", { :controller => "startups", :action => "unfollow", :id => @startup.id}, method: :put, remote: true, :class => "btn btn-danger btn-md pull-right hidden" %> 

                </div>




                
                </div>


          </div>





                <%end%>
              </div>
              
            </div>
            
          </div>
          
        </div>
        
      </section>

            <section class="panel advisordetailpanel">
        <div class="panel advisordetailpanel-inner">
          <div class="row">

            <h2>Followers</h2>

            <br>

            <%if @following%>
            <%@following.each do |followme|%>

            <div class="connectionspeople">
              <%= link_to image_tag(followme.avatar.url(:thumb), class: "img-responsive", :width => "75"), followme %>
              <%= link_to followme.name, followme %><br>
            </div>
            <%end%>

            <%else%>

            <p>Not currently following any advisors or startups</p>
          

            <%end%>

          </div> 
        </div> 
      </section>


    </div>
  </div>
</div>




